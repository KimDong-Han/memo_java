<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ac.kumoh.s20131582.memo_java">
    <!-- 카메라 권한 -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/memo_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/memo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".pop2"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".PopImgActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            />
        <activity
            android:name=".Pop_dialog2"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".Pop_Dialog"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
        <activity
            android:name=".MemoModify"
            android:label="수정 및 삭제"
            android:theme="@style/Platform.MaterialComponents"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MemoActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MainActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application> <!-- 저장소 읽기 권한 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

